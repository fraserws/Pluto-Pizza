// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}


model Pizza {
  id         Int       @id @default(autoincrement())
  quantity   Int
  size       String
  toppings   String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  order      Order?    @relation(fields: [orderId], references: [id]) // Define the relation
  price      Float
  orderId    Int?      // This field is used for the relation
}


model Order {
  id          Int        @id @default(autoincrement())
  userId      String
  status     String     @default("created")
  orderNumber String
  pizzas      Pizza[]
  totalPrice  Float
  notes       String?
  address     String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

}
